<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.soellner.photoimpact.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Photo"
        android:id="@+id/uploadButton"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/uploadedImage"
        android:layout_alignEnd="@+id/uploadedImage" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uploadedImage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:minHeight="300dp"
        android:minWidth="350dp"
        android:nestedScrollingEnabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Photo"
        android:id="@+id/pickPhotoButton"
        android:layout_alignTop="@+id/uploadButton"
        android:layout_alignStart="@+id/uploadedImage" />
</RelativeLayout>
